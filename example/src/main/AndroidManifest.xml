<manifest
    package="de.mrapp.android.adapter.example"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.mrapp.android.adapter.example.activity.MainActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
        <activity
            android:name="de.mrapp.android.adapter.example.activity.PreferenceActivity"
            android:label="@string/preference_activity_title"
            android:parentActivityName="de.mrapp.android.adapter.example.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.mrapp.android.adapter.example.activity.MainActivity"/>
        </activity>
    </application>

</manifest>